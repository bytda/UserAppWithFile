<Window x:Class="UserAppWithFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserAppWithFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="350">
    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="25" Margin="0 40 0 0">Привет</TextBlock>
        <TextBlock HorizontalAlignment="Center" FontSize="25" Margin="0 130 0 0">Введите логин</TextBlock>
        <TextBox x:Name="login" MaxWidth="200" MaxHeight="10" MinHeight="40" MinWidth="150" HorizontalAlignment="Center" Margin="0 0 0 100"></TextBox>
        <TextBlock HorizontalAlignment="Center" FontSize="25" Margin="0 230 0 0">Введите пароль</TextBlock>
        <TextBox x:Name="pass" MaxWidth="200" MaxHeight="10" MinHeight="40" MinWidth="150" HorizontalAlignment="Center" Margin="0 100 0 0"></TextBox>



        <Button x:Name="Button" Click="Button_Click"  MinWidth="100" MaxWidth="150" MinHeight="20" MaxHeight="40" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Margin="0 230 0 0">Регистрация</Button>
        
        
    </Grid>
</Window>
